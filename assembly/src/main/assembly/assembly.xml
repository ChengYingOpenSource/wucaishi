<assembly>
    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.parent.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/config</directory>
            <outputDirectory>/config</outputDirectory>
            <includes>
                <include>*.example</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/luoshu-server/plugins-extension/plugins-extension-datasource-jdbc/target/</directory>
            <outputDirectory>plugins</outputDirectory>
            <includes>
                <include>plugins-extension-datasource-jdbc-*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/luoshu-server/plugins-extension/plugins-extension-datasource-http/target/</directory>
            <outputDirectory>plugins</outputDirectory>
            <includes>
                <include>plugins-extension-datasource-http-*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/luoshu-server/plugins-extension/plugins-extension-script-engine-groovy/target/</directory>
            <outputDirectory>plugins</outputDirectory>
            <includes>
                <include>plugins-extension-script-engine-groovy-*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ${project.parent.basedir}/bin
            </directory>
            <outputDirectory>bin</outputDirectory>
            <excludes>
                <exclude>upgrade/**</exclude>
                <exclude>upgrade.*</exclude>
                <exclude>upgrade-*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>
                ${project.parent.basedir}/luoshu-ui
            </directory>
            <outputDirectory>luoshu-ui</outputDirectory>
        </fileSet>

    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <useProjectArtifact>false</useProjectArtifact>
            <excludes>
                <exclude>com.cy.onepush:plugins-extension-datasource-jdbc</exclude>
                <exclude>com.cy.onepush:plugins-extension-datasource-http</exclude>
                <exclude>com.cy.onepush:plugins-extension-script-engine-groovy</exclude>
                <exclude>org.codehaus.groovy:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>

</assembly>
